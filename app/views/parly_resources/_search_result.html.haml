%p.search-result
  - unless search_result.file_format == "HTML"
    %span.results-fileformat= "[" + search_result.file_format + "]"
  = link_to h(search_result.short_title), search_result.url, :title => search_result.url
  - if search_result.date
    = search_result.date.to_s(:month_year)
    %span.results-date= "&ndash; last updated " + time_ago_in_words(search_result.date) + " ago"
  %br
  - if search_result.unique_description?
    %i= h search_result.unique_description
    %br
  = excerpts(search_result.text, @search_query)
  %span.results-url= search_result.url[7..-1]
  &ndash;
  %small= link_to 'Cached', object_url(search_result)
